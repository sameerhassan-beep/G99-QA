{
  "scripts": {
    "start": "node app.js",
    "test": "jest --detectOpenHandles --forceExit --verbose --runInBand",
    "test:watch": "jest --watch",
    "test:users": "jest users.test.js --detectOpenHandles --forceExit --verbose",
    "test:roles": "jest roles.test.js --detectOpenHandles --forceExit --verbose",
    "test:auth": "jest auth.test.js --detectOpenHandles --forceExit --verbose"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "puppeteer": "^24.37.2",
    "sequelize": "^6.31.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "verbose": true,
    "testTimeout": 10000,
    "clearMocks": true,
    "restoreMocks": true,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
